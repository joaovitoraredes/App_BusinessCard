    <View
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/menu_flutuante"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollIndicators="right"
        android:scrollbarSize="0dp">
    
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/a">

        <View
            android:id="@+id/black"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            app:layout_constraintTop_toBottomOf="@+id/a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"
            app:layout_constraintDimensionRatio="16:9"
            android:background="@drawable/ic_poly_grid_black_"/>

        <View
            android:id="@+id/rubi"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            app:layout_constraintTop_toBottomOf="@+id/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"
            app:layout_constraintDimensionRatio="16:9"
            android:background="@drawable/ic_poly_grid_rubi"/>

        <View
            android:id="@+id/esmeralda"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            app:layout_constraintTop_toBottomOf="@+id/rubi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"
            app:layout_constraintDimensionRatio="16:9"
            android:background="@drawable/ic_poly_grid_esmeralda"/>

        <View
            android:id="@+id/dima"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            app:layout_constraintTop_toBottomOf="@+id/esmeralda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"
            app:layout_constraintDimensionRatio="16:9"
            android:background="@drawable/ic_poly_grid_dima"/>
        -->
    </LinearLayout>

</HorizontalScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="178dp"/>

    <TextView
        android:id="@+id/dfsdf"
        android:text="Cartões premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="34dp"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/a"
        android:text="@string/nossocartoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dfsdf"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

